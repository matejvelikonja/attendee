<div class="list-group events">
    {{#each event in controller}}
        {{#link-to 'event' event
            classNameBindings="
                :list-group-item
                event.is_incomplete:list-group-item-danger
                event.is_running:list-group-item-info
                event.is_done:list-group-item-success
                "
        }}
            <h4 class="list-group-item-heading">{{ event.name }}</h4>
            <span {{ bind-attr class=":badge :is-present event.is_in_future:hidden" }}>{{ event.present_count }}</span>
            <span {{ bind-attr class=":badge :is-absent event.is_in_future:hidden" }}>{{ event.absent_count }}</span>
            <p class="list-group-item-text">
                <small>
                    {{ event.location.name }} <br>
                    {{ humanizeDate event.starts_at 'dddd, DD.MM.YYYY, HH:mm' }}
                </small>
            </p>
        {{/link-to}}
    {{/each}}
</div>
